# 環境変数設定例
# Google Gemini API設定
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# BERTモデル設定
BERT_MODEL_NAME=cl-tohoku/bert-base-japanese-v3
BERT_MAX_LENGTH=512

# ネットワーク設定
REQUEST_TIMEOUT_SEC=30
CONNECT_TIMEOUT_SEC=5

# ログ設定
LOG_LEVEL=INFO

# 論争解析設定
MAX_TOPICS=10
MIN_CONFIDENCE_THRESHOLD=0.7
